<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size_10dp">

    <ImageView
        android:id="@+id/img_item_product"
        android:layout_width="@dimen/meli_item_width"
        android:layout_height="@dimen/meli_item_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_item_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_10dp"
        android:layout_marginTop="@dimen/size15dp"
        android:textSize="@dimen/meli_item_text_size"
        android:textColor="@color/light_gray"
        app:layout_constraintStart_toEndOf="@id/img_item_product"
        app:layout_constraintTop_toTopOf="@id/img_item_product"
        tools:text="nombre del producto" />

    <TextView
        android:id="@+id/tv_price_item_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_10dp"
        android:layout_marginTop="@dimen/size15dp"
        android:textSize="@dimen/meli_item_price_size"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/img_item_product"
        app:layout_constraintTop_toBottomOf="@id/tv_name_item_product"
        tools:text="nombre del producto" />

</androidx.constraintlayout.widget.ConstraintLayout>